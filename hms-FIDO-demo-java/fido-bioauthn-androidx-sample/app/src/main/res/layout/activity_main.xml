<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_text_finger_auth_without_crpObj"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn_round_corner_normal"
        android:fadingEdge="horizontal"
        android:onClick="btnFingerAuthenticateWithoutCryptoObjectClicked"
        android:text="@string/btn_text_finger_auth_no_crpObj"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_text_finger_auth_with_crpObj"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn_round_corner_normal"
        android:fadingEdge="horizontal"
        android:onClick="btnFingerAuthenticateWithCryptoObjectClicked"
        android:text="@string/btn_text_finger_auth_with_crpObj"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_text_face_auth_with_crpObj"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/btn_round_corner_normal"
        android:fadingEdge="horizontal"
        android:onClick="btnFaceAuthenticateWithoutCryptoObjectClicked"
        android:text="@string/btn_text_face_auth_with_crpObj"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_btn_text_size"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_text_face_auth_with_crpObj"
        app:layout_constraintVertical_bias="0.7" />
</androidx.constraintlayout.widget.ConstraintLayout>